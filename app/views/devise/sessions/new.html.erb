
<div class="bg-login printable" id="pane-login">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="login-screen" style="top:50%; height:400px;">
    <div class="panel-login blur-content">
      <div class="panel-heading"></div><!--.panel-heading-->

      <div id="pane-login" class="panel-body active">
        <h2 style="    margin-top: -5px;
        border-radius: 5px 0px 0px;">Login to Dashboard</h2>
        <div class="form-group">
          <div class="inputer">
            <div class="input-wrapper">
            
               <%= f.email_field :email, autofocus: true, :class=>"form-control", :placeholder=>"Enter your email address",:required=>"true", :style=>"padding:10px; color: rgb(240, 240, 240);" %>
    
            </div>
          </div>
        </div><!--.form-group-->
        <div class="form-group">
          <div class="inputer">
            <div class="input-wrapper">
              <%=f.password_field :password, autocomplete: "off", :class=>"form-control", :placeholder=>"Enter your password",:required=>"true", :style=>"padding:10px;     color: rgb(240, 240, 240);" %>
            </div>
          </div>
        </div><!--.form-group-->
        <div class="form-buttons clearfix">
         <% if devise_mapping.rememberable? %>
          <label class="pull-left" ><%= f.check_box :remember_me, :style=>"top: 2px;" %>Remember me</label>
           <% end %>
               
     
        </div><!--.form-buttons-->

  <div class="form-buttons clearfix" style="        margin-left: 10px;
    margin-right: 10px;
    clear: both;
    margin-top: 30px;">

   

         <%= link_to 'Cancel', articles_path(@articles), :class=>"btn btn-white pull-left show-pane-login", :style=>"    padding-left: 20px;
    padding-right: 20px;"%>
         
 <%= f.submit "Log in", :class=>"btn btn-success pull-right", :style=>"    padding-left: 20px;
    padding-right: 20px;     background: #3A4BA9;
    border-color: #3A4BA9;" %>
        
        </div><!--.form-buttons-->



